{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "build": "npm run prisma:generate && npx tsc",
    "dev": "NODE_ENV=development ts-node-dev --respawn src/index.ts",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watchAll",
    "test:html": "NODE_OPTIONS=--experimental-vm-modules jest --reporters=default --reporters=jest-html-reporter",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:coverage:watch": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --watchAll",
    "test:coverage:html": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageDirectory=coverage --coverageReporters=html",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:reset": "prisma migrate reset",
    "prisma:deploy": "prisma migrate deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Transistemas-ac/api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/promise-retry": "^1.1.6",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "cross-fetch": "^4.1.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "promise-retry": "^2.0.1",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.1.3",
    "jest-html-reporter": "^4.3.0",
    "prisma": "^6.15.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node-dev": "^2.0.0"
  }
}
